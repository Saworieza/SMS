<% title "SchoolSys :: Departments" %> 

<p id="notice"><%= notice %></p>

<%= link_to 'Create A Dept', new_department_path %><!-- Admin only-->
<h3>Listing All Departments</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to (department.name), department %></td>
        <td><%= department.hod %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

