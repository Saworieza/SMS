<% title "SchoolSys :: Report an Incident" %> 

<%= form_for(@discipline) do |f| %>
  <% if @discipline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discipline.errors.count, "error") %> prohibited this discipline from being saved:</h2>

      <ul>
      <% @discipline.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :incident %><br>
    <%= f.text_field :incident %>
  </div>
  
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, ["One","Two","Other"] %>
  </div>
  
  <div class="field">
    <%= f.label :incident_date %><br>
    <%= f.date_select :incident_date %>
  </div>
  <div class="field">
    <%= f.label :student %><br>
    <%#= f.text_field :student %>
    <%= f.select :student_id, Student.all.map {|s| [s.fullname, s.id]} %>
  </div>
  <div class="field">
    <%= f.label :adm_no %><br>
    <%#= f.number_field :adm_no %>
    <%= f.select :student_id, Student.all.map {|s| [s.adm_no, s.id]} %>
  </div>
  <div class="field">
    <%= f.label :form %><br>
    <%#= f.text_field :form %>
    <%= f.select :student_id, Student.all.map {|s| [s.classroom_id, s.id]} %>
    <%= f.select :student_id, Student.all.map {|s| [s.stream_id, s.id]} %>
  </div>
  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :action_taken %><br>
    <%= f.text_area :action_taken %>
  </div>
  <div class="field">
    <%= f.label :email_subject %><br>
    <%= f.text_field :email_subject %>
  </div>
  <div class="field">
    <%= f.label :email_message %><br>
    <%= f.text_area :email_message %>
  </div>
  <div class="field">
    <%= f.label :email_address %><br>
    <%= f.text_field :email_address %>
  </div>
  <div class="field">
    <%= f.label :references %><br>
    <%#= f.text_field :references %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
