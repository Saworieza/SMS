<p id="notice"><%= notice %></p>

<h1>Listing Disciplines</h1>

<table>
  <thead>
    <tr>
      <th>Incident</th>
      <th>Incident date</th>
      <th>Student</th>
      <th>Adm no</th>
      <th>Form</th>
      <th>Details</th>
      <th>Action taken</th>
      <th>Email subject</th>
      <th>Email message</th>
      <th>Email address</th>
      <th>References</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.incident %></td>
        <td><%= discipline.incident_date %></td>
        <td><%= discipline.student %></td>
        <td><%= discipline.adm_no %></td>
        <td><%= discipline.form %></td>
        <td><%= discipline.details %></td>
        <td><%= discipline.action_taken %></td>
        <td><%= discipline.email_subject %></td>
        <td><%= discipline.email_message %></td>
        <td><%= discipline.email_address %></td>
        <!-- still dont remember what references is -->
        <td><%#= discipline.references %></td>
        <td><%= link_to 'Show', discipline %></td>
        <td><%= link_to 'Edit', edit_discipline_path(discipline) %></td>
        <td><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

