<p id="notice"><%= notice %></p>

<h1>Listing Library Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Description</th>
      <th>Publisher</th>
      <th>Isbn</th>
      <th>Class</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_books.each do |library_book| %>
      <tr>
        <td><%= library_book.name %></td>
        <td><%= library_book.author %></td>
        <td><%= library_book.description %></td>
        <td><%= library_book.publisher %></td>
        <td><%= library_book.isbn %></td>
        <td><%= library_book.classroom %></td>
        <td><%= library_book.status %></td>
        <td><%= link_to 'Show', library_book %></td>
        <td><%= link_to 'Edit', edit_library_book_path(library_book) %></td>
        <td><%= link_to 'Destroy', library_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

