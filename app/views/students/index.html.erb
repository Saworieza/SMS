
<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Birthdate</th>
      <th>Gender</th>
      <th>Nationality</th>
      <th>Form</th>
      <th>Stream</th>
      <th>Class teacher</th>
      <th>Address</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Email</th>
      <th>Town</th>
      <th>County</th>
      <th>Image</th>
      <th>Adm no</th>
      <th>Adm date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fullname %></td>
        <td><%= student.birthdate %></td>
        <td><%= student.gender %></td>
        <td><%= student.nationality %></td>
        <td><%= student.form %></td>
        <td><%= student.stream %></td>
        <td><%= student.class_teacher %></td>
        <td><%= student.address %></td>
        <td><%= student.phone_1 %></td>
        <td><%= student.phone_2 %></td>
        <td><%= student.email %></td>
        <td><%= student.town %></td>
        <td><%= student.county %></td>
        <td><%= image_tag student.image.url(:thumb) %></td>
        <td><%= student.adm_no %></td>
        <td><%= student.adm_date %></td>
        <td><%= student.classroom.stream %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

